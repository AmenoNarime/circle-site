{
  "name": "Next.js Development Environment",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",

  // ãƒãƒ¼ãƒˆè¨­å®š
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Next.js Dev Server",
      "onAutoForward": "notify"
    }
  },

  // VSCodeè¨­å®š
  "customizations": {
    "vscode": {
      "extensions": [
        // å¿…é ˆæ‹¡å¼µæ©Ÿèƒ½
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "unifiedjs.vscode-mdx",
        "eamodio.gitlens",

        // æ¨å¥¨æ‹¡å¼µæ©Ÿèƒ½
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-json",
        "yzhang.markdown-all-in-one",
        "saoudrizwan.claude-dev"
      ],
      "settings": {
        // ã‚¨ãƒ‡ã‚£ã‚¿è¨­å®š
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true,

        // TypeScriptè¨­å®š
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.suggest.autoImports": true,

        // Tailwind CSSè¨­å®š
        "tailwindCSS.includeLanguages": {
          "typescript": "javascript",
          "typescriptreact": "javascript"
        },
        "tailwindCSS.experimental.classRegex": [
          ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
          ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
        ],

        // MDXè¨­å®š
        "files.associations": {
          "*.mdx": "mdx"
        },

        // Gitè¨­å®š
        "git.autofetch": true,
        "git.enableSmartCommit": true,

        // ãƒ•ã‚¡ã‚¤ãƒ«ç›£è¦–è¨­å®š
        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/dist/**": true,
          "**/.next/**": true
        }
      }
    }
  },

  // ã‚³ãƒ³ãƒ†ãƒŠä½œæˆæ™‚ã®è‡ªå‹•å®Ÿè¡Œã‚³ãƒãƒ³ãƒ‰
  "postCreateCommand": "sudo chown -R node:node /workspaces/${localWorkspaceFolderBasename} && cp .devcontainer/postcss.config.js postcss.config.js && cp .devcontainer/tailwind.config.ts tailwind.config.ts && npm cache clean --force && rm -rf node_modules package-lock.json && npm install",

  // ã‚³ãƒ³ãƒ†ãƒŠã‚¢ã‚¿ãƒƒãƒå¾Œã®ã‚³ãƒãƒ³ãƒ‰
  "postAttachCommand": "npm cache clean --force && rm -rf node_modules package-lock.json && npm install",

  // é–‹ç™ºã‚µãƒ¼ãƒãƒ¼èµ·å‹•å¾Œã®ã‚³ãƒãƒ³ãƒ‰ï¼ˆã‚ªãƒ—ã‚·ãƒ§ãƒ³ï¼‰
  "postStartCommand": "echo 'ğŸµ é–‹ç™ºç’°å¢ƒãŒæº–å‚™å®Œäº†ã—ã¾ã—ãŸï¼'",

  // ã‚³ãƒ³ãƒ†ãƒŠè¨­å®š
  "remoteUser": "node",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // ç’°å¢ƒå¤‰æ•°è¨­å®š
  "containerEnv": {
    "NPM_CONFIG_CACHE": "/tmp/.npm",
    "NPM_CONFIG_PREFIX": "/home/node/.npm-global"
  },

  // æ©Ÿèƒ½è¨­å®š
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    }
  }
}
